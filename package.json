{
	"name": "click-language-features",
	"description": "A language server for the click language.",
	"author": "Jian Huang",
	"license": "MIT",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/bottycode/click-language-features"
	},
	"publisher": "jianh2",
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.63.0"
	},
	"activationEvents": [
		"onLanguage:click",
		"onLanguage:testie"
	],
	"main": "./client/out/extension",
	"icon": "pictures/icon.png",
	"contributes": {
		"languages": [
			{
				"id": "click",
				"extensions": [
					".click",
					".uclick"
				],
				"aliases": [
					"Click Config",
					"click"
				],
				"configuration": "./languages/click/language-configuration.json",
				"icon": {
					"dark": "./languages/click/icon.svg",
					"light": "./languages/click/icon.svg"
				}
			},
			{
				"id": "testie",
				"extensions": [
					".testie",
					".clicktest"
				],
				"aliases": [
					"Testie",
					"testie",
					"Click Test",
					"clicktest"
				],
				"configuration": "./languages/testie/language-configuration.json",
				"icon": {
					"dark": "./languages/testie/icon.svg",
					"light": "./languages/testie/icon.svg"
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^9.1.0",
		"@types/node": "^16.11.7",
		"@typescript-eslint/eslint-plugin": "^5.19.0",
		"@typescript-eslint/parser": "^5.19.0",
		"eslint": "^8.13.0",
		"mocha": "^9.2.1",
		"typescript": "^4.7.2",
		"vsce": "^2.10.0"
	}
}
